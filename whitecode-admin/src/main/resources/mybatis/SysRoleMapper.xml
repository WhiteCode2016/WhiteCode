<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whitecode.dao.mapper.SysRoleMapper">
    <sql id="selectColumns">
        SELECT
            sr.role_id
            sr.role_name,
            sr.password,
            sr.enable,
            sr.description,
            sr.creator,
            sr.create_date_time,
            sr.modifier,
            sr.modify_date_time
        FROM sys_role sr
    </sql>

    <!-- 3.根据条件查询用户信息 -->
    <select id="getUsersByCondition" resultType="SysRole">
        <include refid="selectColumns" />
        WHERE 1=1
        <if test="roleName != null and roleName != ''">
            AND sr.role_name like CONCAT('%', #{roleName}, '%')
            <!-- AND sr.role_name = #{roleName} -->
        </if>
        <if test="enable != null and enable != ''">
            AND sr.enable = #{enable}
        </if>
        ORDER BY sr.create_date_time
    </select>
</mapper>